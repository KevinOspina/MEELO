<div class="card">

    <div class="card card-header bg-primary">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> ¡Muestranos una imagen de tu evento!

        </h3>
    </div>

    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <!-- SE ENVIARÁ TAMBIEN UN ARCHIVO PESADO -->

            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <!-- BUSCADOR DE ARCHIVOS (IMAGENES) CON BOOSTRAP -->
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">¡Selecciona tu mejor imagen para dar a
                            conocer tu evento!</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Dale un nombre a tu evento" required>
            </div>

            <div class="form-group">
                <textarea name="description" placeholder="Describe tu evento!" rows="4" class="form-control"
                    required></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">
                    <i class="fa fa-upload"></i> Todo MEELO!
                </button>
            </div>


        </form>

    </div>

</div>

<div class="card mt-4">

    <div class="card-header bg-primary text-white">
        <h3> <i class="far fa-images"></i> Subidas recientemente</h3>
    </div>

    <div class="card-body">
        <div class="row">

            {{#each images}}

                <div class="col-md-4">
                    <a href="/images/{{uniqueId}}">
                        <img src= "/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                    </a>
                </div>
           

            {{/each}}
        </div>

    </div>
</div>